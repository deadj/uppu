{% include "DuplicateItems/header.phtml" %}
    <div class="fileBlock">
        {% if type == "video" %}
            <video src="{{ link }}" width="350" controls></video>
        {% elseif type == "audio" %}
            <audio src="{{ link }}" controls></audio>
        {% elseif type == "image" %}
            <img src="{{ link }}">
        {% endif %}
        <ul class="fileInfo">
            {% for key, data in fileData %}
                <li>{{ key }}: {{ data }}</li>                
            {% endfor %}
        </ul>
        <a class="uploadButton" href="{{ link }}" download="">Скачать</a>
    </div>
</body>
</html>